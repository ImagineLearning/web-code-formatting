{
	"name": "@imaginelearning/web-code-formatting",
	"version": "2.1.2",
	"description": "Code formatting configurations for prettier and js-beautify",
	"main": "install.js",
	"author": {
		"name": "Imagine Learning"
	},
	"bugs": {
		"url": "https://github.com/ImagineLearning/web-code-formatting/issues"
	},
